port: 7890
socks-port: 7891
allow-lan: true
mode: rule
log-level: info
external-controller: :9090

profile:
  store-selected: true
  store-fake-ip: true

dns:
  enabled: true
  ipv6: false
  default-nameserver:
    - 223.5.5.5
    - 119.29.29.29
  enhanced-mode: fake-ip
  fake-ip-range: 198.18.0.1/16
  use-hosts: true
  nameserver:
    - https://doh.pub/dns-query
    - https://dns.alidns.com/dns-query
  fallback:
    - https://1.1.1.1/dns-query
    - https://8.8.8.8/dns-query
  fallback-filter:
    geoip: true
    ipcidr:
      - 240.0.0.0/4

proxies:
  {{#each proxies}}
  {{this}}
  {{/each}}

proxy-groups:
  - name: PROXY
    type: select
    proxies:
      - DIRECT
      {{#each proxyNames}}
      - {{this}}
      {{/each}}
  
  - name: Load-Balance
    type: load-balance
    strategy: consistent-hashing
    proxies:
      {{#each proxyNames}}
      - {{this}}
      {{/each}}
  
  - name: Streaming
    type: select
    use:
      - netflix
      - youtube
      - disney+
  
  - name: Gaming
    type: select
    use:
      - steam
      - epic-games
      - battle.net

rules:
  - DOMAIN,clash.razord.top,DIRECT
  - DOMAIN,yacd.haishan.me,DIRECT
  - RULE-SET,applications,DIRECT
  - RULE-SET,lan,DIRECT
  - RULE-SET,unban,PROXY
  - RULE-SET,streaming-rules,Streaming
  - RULE-SET,gaming-rules,Gaming
  - RULE-SET,global,PROXY
  - RULE-SET,china,DIRECT
  - RULE-SET,proxy,PROXY
  - MATCH,Load-Balance
